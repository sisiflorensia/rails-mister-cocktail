<div class="container my-4">
  <div class="row justify-content-center text-center">
    <div class="col-md-12 text-center pb-40">
      <h1 class="head">Choose a cocktail</h1>

      <div class="cards">
        <% @cocktails.each do |cocktail| %>
          <div class="card-category m-2" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cocktail.url %>)">
            <%=  link_to cocktail.name.capitalize, cocktail_path(cocktail) %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
