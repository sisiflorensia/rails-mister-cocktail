<div class="container">
  <div class="row justify-content-center text-center">
    <div class="col-md-12 text-center">
      <h1>Choose a cocktail</h1>

      <div class="cards">
        <% @cocktails.each do |cocktail| %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cocktail.url %>)">
            <%=  link_to cocktail.name, cocktail_path(cocktail) %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
