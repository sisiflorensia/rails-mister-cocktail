<div class="container">
  <div class="row">
    <div class="col-md-12 mb-200">
      <div class="card-product my-5">
        <img src=<%= @cocktail.url %> />
        <div class="card-product-infos m-2">
          <h2><%= @cocktail.name.capitalize %></h2>
          <h3>
            Ingredients
            <%= link_to new_cocktail_dose_path(@cocktail) do %>
              <i class="far fa-edit"></i>
            <% end %>
          </h3>
          <ul>
            <% @doses.each do |dose| %>
              <div class="d-flex">
                <li><%= dose.description %> </li>
                <li><%= dose.ingredient.name %></li>
              </div>
            <% end %>
          </ul>
        </div>
      </div>
      <%= link_to "See other recipes", cocktails_path, class: "btn btn-ghost mb-4" %>
    </div>
  </div>
</div>
